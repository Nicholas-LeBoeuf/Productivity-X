@{
    ViewData["Title"] = "Combined Schedules";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>test</title>
    <link href="~/css/family.css" rel="stylesheet">
    <link href="~/css/materialdesignicons.min.css" rel="stylesheet">
    <link href="~/css/vuetify.min.css" rel="stylesheet">

    <style>
        .my-event {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            border-radius: 2px;
            background-color: #1867c0;
            color: #ffffff;
            border: 1px solid #1867c0;
            font-size: 12px;
            padding: 3px;
            cursor: pointer;
            margin-bottom: 1px;
            left: 4px;
            margin-right: 8px;
            position: relative;
        }

        .my-event.with-time {
            position: absolute;
            right: 4px;
            margin-right: 0px;
        }

        .theme--light.v-calendar-daily {
            background-color: #303030;
            border-left: 1px solid #e0e0e0;
            border-top: 1px solid #e0e0e0;
        }

        .theme--light.v-calendar-daily .v-calendar-daily_head-day {
            color: #fff;
        }

        .my-app.v-application .primary--text {
            color: #fff !important;
        }

        .title {
            justify-content: center;
            font-size: 25px;
            color: gold;
            margin-left: 16%;
        }

        #weekHeader {
            display: flex;

            flex-wrap: nowrap;
            align-content: space-evenly;
            margin: 3%;
        }
        #back {
            flex-wrap: nowrap;
            justify-content: center;
        }

        #btnclick {
            display: inline-block;
            padding: 0.35em 1.2em;
            border: 0.1em solid #353535;
            margin: 0 0.3em 0.3em 0;
            border-radius: 0.40em;
            box-sizing: border-box;
            text-decoration: none;
            font-family: 'Roboto',sans-serif;
            font-weight: 300;
            background-color: #353535;
            color: #FFA700;
            text-align: center;
            transition: all 0.2s;
        }

        #btnclick:hover {
            background: #424242;
        }

        #userLegend {
            background-color: green;
            color: white;
            font-size: 20px;
            font-weight: 900;
            margin-left: 16%;
            padding: 10px;
            text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
        }

        #friendLegend {
            background-color: #FF69B4;
            color: white;
            font-size: 20px;
            font-weight: 900;
            margin-left: 15%;
            padding: 10px;
            text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
        }
    </style>
</head>
<body>


    <div id="app" style=" width: 100%; padding-left: 13%;">
        <div id="weekHeader">
            <div id="back">
                <input type="button" id="btnclick" value="Back" onclick="window.location= '@Url.Action( "Friends", "MainWindow")'" />
            </div>
            <div id="userLegend">
                You
            </div>
            <div class="title">
                <span id="currentMonth"></span>
                <span id="firstDate"></span> -
                <span id="nextMonth"></span>
                <span id="lastDate"></span>,
                <span id="currentYear"></span>
            </div>
            <div id="friendLegend">
                Friend
            </div>
        </div>

        <v-app id="inspire" class="my-app">
            <v-row>
                <v-col>
                    <v-sheet height="100%">
                        <v-sheet height="100%">
                            <v-calendar ref="calendar"
                                        :now="today"
                                        :value="today"
                                        :events="events"
                                        color="primary"
                                        type="week"></v-calendar>
                        </v-sheet>
                </v-col>
            </v-row>
        </v-app>
    </div>

</body>
</html>
<script src="~/js/vue.js"></script>
<script src="~/js/vuetify.js"></script>
<script src="~/js/axios.js"></script>
<script>

    new Vue({
        el: '#app',
        vuetify: new Vuetify({
            theme: {
                dark: true,
                themes: {
                    dark: {
                        // Color is applied to selected drop down item
                        primary: '#0064A2',

                        // Uncomment this to make things worse
                        // 'primary--text': '#FF00FF'
                    }
                }
            }
        }),
        data: () => ({

            today: new Date().toLocaleDateString().split('/').join('-'),//'2021-03-12',
            events: [],
        }),
        mounted() {
            this.getData();
        },
        methods: {
            getData() {
                const that = this;
                axios.get('/MainWindow/GetWeeklyEvents')
                    .then(function (response) {
                        that.events = response.data;
                    })
                    .catch(function (error) {
                        console.log(error);
                    });
            }
        }
    })
</script>

<script type="text/javascript">
    var monthsInEng = ['', 'January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
    function getSunday(date) {
        var day = date.getDay();
        var deltaDay;
        if (day == 0) {
            deltaDay = 7;
        } else {
            deltaDay = day;
        }
        var sunday = new Date(date.getTime() - deltaDay * 24 * 60 * 60 * 1000);
        return sunday;
    }
    var sunday = getSunday(new Date());
    document.getElementById("currentMonth").innerHTML = monthsInEng[sunday.getMonth() + 1];
    var saturday = new Date(sunday.getTime() + 6 * 24 * 60 * 60 * 1000);
    document.getElementById("nextMonth").innerHTML = monthsInEng[saturday.getMonth() + 1];
    document.getElementById("firstDate").innerHTML = sunday.getDate();
    document.getElementById("lastDate").innerHTML = saturday.getDate();
    document.getElementById("currentYear").innerHTML = sunday.getFullYear();

</script>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
