@model Productivity_X.Models.ForgotPw2
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
	<form asp-action="EnterSecurityCode">
		<div id="forgotLogo">
			<img src="~/Images/ProductivityXLogo.png" alt="Productivity X Logo" />
		</div>
		<p id="forgotPwText">
			Verification code sent to *EMAIL* <br />
			Please type in the code to reset your password
		</p>
		<div id="forgotPwTextInput">
			<input asp-for="verificationCode" placeholder="Verification Code" class="form-control" />
			<span asp-validation-for="verificationCode" class="text-danger"></span>
		</div>

		<input type="submit" id="verifyCodeButton" value="Verify" onclick="location.href='@Url.Action("EnterSecurityCode")'" />

		<input type="button" id="backButtonPW" value="Back" onclick="location.href='@Url.Action("Index")'" />
		</form>
</div>

@if (ViewBag.Message != null)
{
	<script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
	</script>

}