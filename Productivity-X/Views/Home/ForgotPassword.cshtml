@model Productivity_X.Models.ForgotPw1
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
	<form asp-action="EnterUsernameEmail">
		<div id="forgotLogo">
			<img src="~/Images/ProductivityXLogo.png" alt="Productivity X Logo" />
		</div>
		<p id="forgotPwText">
			Please enter your username and the email <br />
			that goes along with that username
		</p>
		<div id="forgotPwEmailInput">
			<input asp-for="email" placeholder="Email" class="form-control" />
			<span asp-validation-for="email" class="text-danger"></span>
		</div>
		<div id="forgotPwUsernameInput">
			<input asp-for="username" placeholder="Username" class="form-control" />
			<span asp-validation-for="username" class="text-danger"></span>
		</div>

		<input type="submit" id="verifyButton" value="Verify" onclick="location.href='@Url.Action("EnterUsernameEmail")'" />

		<input type="button" id="backButtonPW" value="Back" onclick="location.href='@Url.Action("Index")'" />
		</form>
</div>

@if (ViewBag.Message != null)
{
	<script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
	</script>

}